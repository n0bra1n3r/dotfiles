#!/usr/bin/env bash
# chezmoi:template:left-delimiter="#{" right-delimiter="}#"

set -e

if [ -n "$ZSH_VERSION" ]; then
  setopt +o nomatch
else
  shopt -u nullglob
fi

for zip in ~/.dotfiles/deps/*/*.zip; do
  dir="$(dirname "$zip")"
  if [[ -d "$dir" ]]; then
    pushd "$dir" >/dev/null && \
      unzip -oqq "$zip" && \
      rm "$zip" && \
      echo "> unarchived $(basename "$zip")"
    popd >/dev/null
  fi
done

for gz in ~/.dotfiles/deps/*/.local/bin/*.exe.gz; do
  dir="$(dirname "$gz")"
  if [[ -d "$dir" ]]; then
    file="${gz%.gz}"
#{- if eq .chezmoi.os "darwin" }#
    file="${file%.exe}"
#{- end }#
    gunzip "$gz" > "$file" && \
    chmod +x "$file" && \
    rm "$gz" && \
    echo "> unarchived $(basename "$gz")"
  fi
done

#{- if eq .chezmoi.os "windows" }#
for pkg in ~/.dotfiles/deps/*/.local/*.zst; do
  dir="$(dirname "$pkg")"
  if [[ -d "$dir" ]]; then
    pushd "$dir" >/dev/null && \
      rm -rf !"$pkg" && \
      zstd --decompress "$pkg" &>/dev/null && \
      tar -xvf ./*.pkg.tar >/dev/null && \
      rm ./*.pkg.* && \
      rm ./.* && \
      echo "> unarchived $(basename "$pkg")"
    popd >/dev/null
  fi
done
#{- else if eq .chezmoi.os "darwin" }#
for app in ~/.dotfiles/deps/*/Applications/*.app; do
  cp -rf "$app" /Applications && echo "> installed $(basename "$app")"
done
#{- end }#

