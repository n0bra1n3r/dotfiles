# Git aliases

function ga() {
  git add -N "*$@*" && git ap "*$@*"
}

function gc() {
  local type="$1"

  case "$type" in
  test|feat|refactor|style|fix|chore|docs|build|perf|ci|revert)
    shift
    ;;
  *)
    unset type
    ;;
  esac

  local ticket="$(git_ticket)"
  local message="$@"

  if [[ -z "$type" || -z "$message" ]]; then
    if [[ ! -z "$ticket" ]]; then
      echo "WARN: unknown commit type; leaving commit message as-is"
    fi
    git cm "$type$message"
  else
    local prefix="$type($ticket):"

    if [[ -z "$ticket" || "$type" == "$prefix" ]]; then
      git cm "$type $message"
    else
      git cm "$prefix $message"
    fi
  fi
}

