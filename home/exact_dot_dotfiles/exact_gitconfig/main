# This is Git's per-user configuration file.

[user]
  name = Ryan Blonna
  email = n0.b741n37@gmail.com

[includeif "gitdir:src/"]
  path = ~/.dotfiles/gitconfig/n0bra1n3r

[include]
  path = ~/.gitconfig

[includeif "gitdir:~/n0bra1n3r/"]
  path = ~/.dotfiles/gitconfig/n0bra1n3r

[includeif "gitdir:~/.local/share/chezmoi/"]
  path = ~/.dotfiles/gitconfig/n0bra1n3r

[pull]
  rebase = true

[alias]
  ae = add --edit
  ap = add --patch
  au = add --update
  bd = !git branch -r | awk '{print $1}' | egrep -v -f /dev/fd/0 <(git branch -vv | grep origin) | awk '{print $1}'
  bl = !git for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)' | less
  ci = commit
  cia = commit --amend
  cim = commit --message
  co = checkout
  mg = merge
  pu = push --follow-tags --recurse-submodules=check
  puf = push --follow-tags --force-with-lease
  pup = !git push --follow-tags --set-upstream origin $(git branch --show-current)
  rb = rebase --rebase-merges
  rbi = rebase --rebase-merges --interactive
  rs = restore
  rss = restore --staged
  rsd = !git stash --staged && git stash drop
  sa = stash
  sap = stash pop
  sas = stash --staged
  sau = !git stash --staged && git stash && git stash pop --index stash@{1}
  st = status
  sw = switch

[tig "bind"]
  log = I !git rebase --rebase-merges --interactive %(commit)
  main = I !git rebase --rebase-merges --interactive %(commit)
  pager = I !git rebase --rebase-merges --interactive %(commit)
  refs = I !git rebase --rebase-merges --interactive %(branch)
  log = S !?git reset --soft %(commit)
  main = S !?git reset --soft %(commit)
  pager = S !?git reset --soft %(commit)

[advice]
  useCoreFSMonitorConfig = false
